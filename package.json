{
  "name": "@follicore/platform",
  "version": "0.3.0",
  "description": "Predictive Trichology Platform - Hair Health Management System based on CogniCore POMDP Engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:ci": "eslint src --max-warnings 55",
    "proto:compile": "python ml/scripts/compile_protos.py",
    "ml:start": "docker-compose -f ml/docker-compose.yml up",
    "ml:start:gpu": "docker-compose -f ml/docker-compose.yml --profile gpu up",
    "ml:build": "docker-compose -f ml/docker-compose.yml build"
  },
  "keywords": [
    "trichology",
    "hair-diagnostics",
    "pomdp",
    "digital-health",
    "ai-diagnostics",
    "computer-vision",
    "acoustic-analysis",
    "predictive-medicine",
    "grpc",
    "ml-inference"
  ],
  "author": {
    "name": "БФ Другой путь",
    "email": "tech@awfond.ru",
    "url": "https://awfond.ru"
  },
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.53.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
